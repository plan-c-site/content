   grow=false
   gap=2
   itemsAlign="items-stretch"
   justiftContent="justify-stretch" %}
{% resourceList
   resources=[]
   type={discriminant: "simple", value: 2}
   icon=""
   iconColor=""
   appendStateField="Additional In Person Clinic Resources" /%}
{% /flexSection %}
{% /horizontalSplit %}
{% /conditionalSection %}
