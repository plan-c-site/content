---
title: Form Tests
seo:
  image:
    discriminant: ''
---
{% heroSection
   image={discriminant: "uploaded", value: "mailbox"}
   imageSide="right"
   color="green"
   imageBackgroundColor="pink" %}
# Testing Plan C Forms

{% formWrapper
   formType={discriminant: "link", value: {pattern: "https://www.plancpills.org/abortion-pill/[:state:]"}}
   afterSubmit="nothing" %}
{% formInput
   fields=[{label: {name: "Find Pills", slug: "state"}, required: false, type: {discriminant: "select", value: {placeholder: "Choose a state", options: [{label: "Alabama", value: "alabama"}, {label: "California", value: "california"}], embedSubmitButton: {discriminant: true, value: {icon: "search", background: "black", altHoverBackground: ""}}}}}] /%}
{% /formWrapper %}

{% formWrapper
   formType={discriminant: "custom", value: {code: "alert(`Got: ${inputs.email}`)"}}
   afterSubmit="nothing" %}
{% formInput
   fields=[{label: {name: "Sign up to newsletter", slug: "email"}, required: false, type: {discriminant: "text", value: {placeholder: "your@email.com", multiline: false, embedSubmitButton: {discriminant: true, value: {icon: "check", background: "green", altHoverBackground: "red"}}}}}] /%}
{% /formWrapper %}

{% formWrapper
   formType={discriminant: "multiStep", value: [{discriminant: "custom", value: {code: "alert(`Got: ${inputs.feedback}`)\nreturn\"success\""}}, {discriminant: "custom", value: {code: "alert(`Second Step: ${inputs.feedback}`)\nreturn \"error\""}}]}
   afterSubmit="reset" %}
{% formInput
   fields=[{label: {name: "Give us feedback", slug: "feedback"}, required: false, type: {discriminant: "text", value: {placeholder: "Feedback", multiline: true, embedSubmitButton: {discriminant: true, value: {icon: "quote", background: "blue", altHoverBackground: "blue"}}}}}] /%}
{% /formWrapper %}
{% /heroSection %}

{% formWrapper
   formType={discriminant: "link", value: {pattern: "/[:lang:]/[:text:]"}}
   afterSubmit="show-screens" %}
{% formSection type="waiting" %}
{% horizontalSplit noHeader=false %}
{% sectionHeader color="green" title="Testing a Link Form" icon="" /%}

{% bodySection
   centered=false
   fullWidth=false
   color="beige"
   textSize="medium" %}
{% formInput
   fields=[{label: {name: "Some Text", slug: "text"}, required: false, type: {discriminant: "text", value: {placeholder: "Something...", multiline: false, embedSubmitButton: {discriminant: false}}}}, {label: {name: "Language", slug: "lang"}, required: true, type: {discriminant: "select", value: {options: [{label: "English", value: "en"}, {label: "Spanish", value: "es"}], embedSubmitButton: {discriminant: false}}}}, {label: {name: "Submit", slug: "submit"}, required: false, type: {discriminant: "submit", value: {icon: "", size: "standard", background: "beige", altHoverBackground: "", smallShadow: false, leftIcon: false}}}] /%}
{% /bodySection %}
{% /horizontalSplit %}
{% /formSection %}

