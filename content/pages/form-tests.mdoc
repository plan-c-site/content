---
title: Form Tests
seo:
  image:
    discriminant: ''
---
{% formWrapper
   formType={discriminant: "link", value: {pattern: "/[:lang:]/[:text:]"}} %}
{% formSection type="waiting" %}
{% horizontalSplit noHeader=false %}
{% sectionHeader color="green" title="Testing a Link Form" icon="" /%}

{% bodySection
   centered=false
   fullWidth=false
   color="beige"
   textSize="medium" %}
{% formInput
   fields=[{label: {name: "Some Text", slug: "text"}, required: false, type: {discriminant: "text", value: {placeholder: "Something..."}}}, {label: {name: "Language", slug: "lang"}, required: true, type: {discriminant: "select", value: {options: [{label: "English", value: "en"}, {label: "Spanish", value: "es"}]}}}, {label: {name: "Submit", slug: "submit"}, required: false, type: {discriminant: "submit", value: {icon: "", size: "standard", background: "beige", altHoverBackground: "", smallShadow: false, leftIcon: false}}}] /%}
{% /bodySection %}
{% /horizontalSplit %}
{% /formSection %}

{% formSection type="submitted" %}
{% bodySection
   centered=false
   fullWidth=false
   color="beige"
   textSize="medium" %}
Submitted....
{% /bodySection %}
{% /formSection %}

{% formSection type="success" %}
{% bodySection
   centered=true
   fullWidth=false
   color="green"
   textSize="large" %}
Success!
{% /bodySection %}
{% /formSection %}

{% formSection type="error" %}
{% bodySection centered=true fullWidth=false color="red" textSize="large" %}
Form submission failed
{% /bodySection %}
{% /formSection %}
{% /formWrapper %}

{% formWrapper
   formType={discriminant: "custom", value: {code: "console.log(inputs);\nif (inputs.text.length > 2) {\nreturn \"success\";\n}\nreturn \"error\";"}} %}
{% formSection type="waiting" %}
{% horizontalSplit noHeader=false %}
{% sectionHeader color="red" title="Testing a Custom Form" icon="warning" %}
These should only be used if **Absolutely Necessary**
{% /sectionHeader %}

{% bodySection
   centered=false
   fullWidth=false
   color="beige"
   textSize="medium" %}
{% formInput
   fields=[{label: {name: "Some Text (must be longer than 2 characters)", slug: "text"}, required: false, type: {discriminant: "text", value: {placeholder: "Something..."}}}, {label: {name: "Language", slug: "lang"}, required: true, type: {discriminant: "select", value: {options: [{label: "English", value: "en"}, {label: "Spanish", value: "es"}]}}}, {label: {name: "Submit", slug: "submit"}, required: false, type: {discriminant: "submit", value: {icon: "", size: "primary", background: "beige", altHoverBackground: "", smallShadow: false, leftIcon: false}}}] /%}
{% /bodySection %}
{% /horizontalSplit %}
{% /formSection %}

{% formSection type="submitted" %}
{% bodySection
   centered=false
   fullWidth=false
   color="beige"
   textSize="medium" %}
Submitted....
{% /bodySection %}
{% /formSection %}

{% formSection type="success" %}
{% bodySection
   centered=true
   fullWidth=false
   color="green"
   textSize="large" %}
Success!
{% /bodySection %}
{% /formSection %}

{% formSection type="error" %}
{% bodySection centered=true fullWidth=false color="red" textSize="large" %}
Form submission failed
{% /bodySection %}
{% /formSection %}
{% /formWrapper %}
